set nowrap
set number
set numberwidth=3
set showcmd
set showmatch
set ruler
set wildmenu
set autoindent
set colorcolumn=80
set scrolloff=5

let g:solarized_termcolors=256
syntax enable
set background=dark
colorscheme solarized

set ts=2                " number of spaces in a tab
set sw=2                " number of spaces for indent
set et                  " expand tabs into spaces

highlight! link SignColumn LineNr

